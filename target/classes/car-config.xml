<?xml version="1.0" encoding="UTF-8"?>
<!-- https://johngrib.github.io/wiki/spring-bean-config-xml/ -->
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<bean id="hyundai" class="kr.inhatc.ioc.xml.HyundaiMaker"></bean> 
	<bean id="kia" class="kr.inhatc.ioc.xml.KiaMaker" /> 
	<bean id="manager" class="kr.inhatc.ioc.xml.OrderManager">
		<!-- setter로 주입 -->
		<!-- <property name="maker" ref="hyundai"></property> -->
		<!-- 생성자 사용 -->
		<constructor-arg ref="kia"></constructor-arg>
	</bean>
</beans>